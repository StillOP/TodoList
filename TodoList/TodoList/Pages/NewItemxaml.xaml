<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoList.Pages.NewItemxaml"
             Title="Nouvel Item">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Enregister" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Text"/>
            <Entry x:Name="Text"/>
            <Label Text="Description"/>
            <Entry x:Name="Description"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>