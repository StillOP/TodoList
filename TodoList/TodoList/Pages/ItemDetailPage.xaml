<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoList.Pages.ItemDetailPage">
    <ContentPage.Content>
        <StackLayout x:Name="Details">
            <Label Text="Texte:" FontSize="15" />
            <Label Text="{Binding text}" FontSize="9"/>
            <Label Text="Description:" FontSize="15" />
            <Label Text="{Binding description}" FontSize="9"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>